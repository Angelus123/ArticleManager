extends layout
block content
    h1= article.title
    h5 written by #{article.author}
    p.border.border-left-0.margin.margin-right-100= article.body
    hr
    a.btn.mr-sm-2.btn-secondary(href='/articles/edit/'+article._id) Edit
    a.btn.btn-danger.mr-sm-2.delete-article(href='/articles/delete/',data-id=article._id) Delete

